/*********************** includes ***************************/
#include <avr/io.h>
#include <util/delay.h>
#include "lcd/lcd_alphanumeric_16x2.h"

/*********************************************************
 * 		main()
 *
 * 	Description : Application entry point.
 */
int main(void){
	LCD_ALPHANUMERIC_16X2 lcd;

	uint8_t data_pins[4] = {PD0, PD1, PD2, PD3};
	lcd_alphnumeric_16x2_cfg(&lcd, &DDRD, &PORTD, &DDRB, &PORTB, data_pins, PB0, PB1, MODE_4_BITS);
	lcd_alphnumeric_16x2_int(&lcd);

	char* STR = "Hello";
	lcd_alphnumeric_16x2_move_curosr(&lcd, 1, 0);
	lcd_alphnumeric_16x2_send_string(&lcd, STR);
	_delay_ms(500);
	lcd_alphnumeric_16x2_clear(&lcd);
	lcd_alphnumeric_16x2_send_int(&lcd, 375567);
	while(1);
	return 0;
}

